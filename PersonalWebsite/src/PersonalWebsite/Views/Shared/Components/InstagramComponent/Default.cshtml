@model List<PersonalWebsite.Common.InstagramDTO>

<style>
    .ig-img {
        padding: 3px;
    }
</style>
<h3>Instagram: </h3>
<div class="container">
    <div class="row">

        @foreach (var image in Model.Take(3))
        {

            <div class="col-md-4 ig-img">
                <a href="@image.Link" target="_blank">
                    <img src="@image.ImgURL" class="img-fluid" />
                </a>
            </div>

        }
    </div>
    <div class="row">

        @foreach (var image in Model.Skip(3).Take(3))
        {

            <div class="col-md-4 ig-img">
                <a href="@image.Link" target="_blank">
                    <img src="@image.ImgURL" class="img-fluid" />
                </a>
            </div>

        }
    </div>

    <div class="row">

        @foreach (var image in Model.Skip(6).Take(3))
        {

            <div class="col-md-4 ig-img">
                <a href="@image.Link" target="_blank">
                    <img src="@image.ImgURL" class="img-fluid" />
                </a>
            </div>

        }
    </div>
</div>