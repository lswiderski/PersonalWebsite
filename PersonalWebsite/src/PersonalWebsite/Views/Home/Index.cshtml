@{
    ViewData["Title"] = "Home Page";
}
@{
    Layout = "_Layout";
}
<div class="index-header">
    :D
</div>
<div class="container">
    <div class="row">
        <div class="col-lg-8">
            <div class="row">
                <div class="card">
                    <h4 class="card-title">Recent Projects</h4>
                    <div class="card-block"></div>
                </div>
            </div>
            <div class="row">
                <div class="card">
                    <h4 class="card-title">Recent Adventures</h4>
                    <div class="card-block"></div>
                </div>
            </div>
            <div class="row">
                <div class="card">
                    <h4 class="card-title">Recent Posts</h4>
                    <div class="card-block"></div>
                </div>
            </div>
        </div>
        <div class="col-lg-4">
            <div class="row">
                <div class="card">
                    <h4 class="card-title">Instagram:</h4>
                    <div class="card-block">
                        @await Component.InvokeAsync("InstagramComponent")
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="card">
                    <h4 class="card-title">Twitter:</h4>
                    <div class="card-block"></div>
                </div>
            </div>
        </div>
    </div>
</div>