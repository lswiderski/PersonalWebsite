@using PersonalWebsite.Services.Models
@model AddTagViewModel
@{
}
<h4>Add New Tag</h4>

<form class="form">
    <div class="form-group">
        <label asp-for="Name" class="sr-only" ></label>
        <div class="input-group">
            <div class="input-group-addon">#</div>
            <input asp-for="Name" type="text" class="form-control"  placeholder="Tag">
        </div>
    </div>
    <button type="button" onclick="AdminTag.AddTag('@Url.Action("Add", "Tags", new { Area = "Admin" })', $('#Name').val())" class="btn btn-primary">Add</button>
</form>
