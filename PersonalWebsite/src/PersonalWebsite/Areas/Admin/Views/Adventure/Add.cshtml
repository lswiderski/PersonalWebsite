@using System.Xml.Linq
@using PersonalWebsite.Common.Enums
@model PersonalWebsite.Services.Models.AddAdventureViewModel

@{
    Layout = "_AdminLayout";
}
<div class="col-md-6">
    <form asp-controller="Adventure" asp-action="Add" method="post" role="form" id="post-form" class="form">
        <div class="card card-block">
            <div class="card-title"><h3>Add new Adventure</h3></div>
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Country"></label>
                <input asp-for="Country" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Latitude"></label>
                <input asp-for="Latitude" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Longitude"></label>
                <input asp-for="Longitude" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="PostId"></label>
              @Html.DropDownListFor(x => x.PostId, Model.Posts, null, new { @class = "form-control" })
            </div>
            <div class="form-group">
                <label asp-for="Map"></label>
                <input asp-for="Map" class="form-control" />
            </div>
            <input type="submit" value="Add" class="btn btn-default" id="submit-button" />
        </div>
    </form>
</div>